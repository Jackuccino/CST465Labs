@model ComputerModel

@{
    ViewData["Title"] = "Index";
}

<h2>HHInputFor</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter your name" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", placeholder = "Enter password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IPAddress, "IP Address", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.IPAddress, new { @class = "form-control", placeholder = "Enter IP address" })
        @Html.ValidationMessageFor(m => m.IPAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Enter location" })
        @Html.ValidationMessageFor(m => m.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OS, new { @class = "control-label" })
        @Html.DropDownListFor(m => m.OS, new SelectList(ComputerModel.OSTypes), "--- Select an OS ---", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OS)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5", placeholder = "Enter description" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SupportedMonitors, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.SupportedMonitors, new { @class = "form-control", type = "number", placeholder = "Enter a number" })
        @Html.ValidationMessageFor(m => m.SupportedMonitors)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}