@model Player
@{
    ViewData["Title"] = "Player";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Player</h2>

<form asp-action="AddPlayer" asp-controller="TopScorer" method="post">
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">

            <input hidden asp-for="Id" value="@Model.Id" />

            <div class="col-sm-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col-sm-4">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position"></span>
            </div>
            <div class="col-sm-4">
                <label asp-for="Nationality" class="control-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality"></span>
            </div>
        </div>
        <div class="row justify-content-start">
            <div class="col-auto">
                <label asp-for="JerseyNumber" class="control-label"></label>
                <input type="number" asp-for="JerseyNumber" class="form-control goals_input_width" />
                <span asp-validation-for="JerseyNumber"></span>
            </div>
            <div class="col-auto">
                <label asp-for="GoalScored" class="control-label"></label>
                <input type="number" asp-for="GoalScored" class="form-control goals_input_width" />
                <span asp-validation-for="GoalScored"></span>
            </div>
            <div class="col-auto">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" asp-items="@(new SelectList(Model.TeamList, "Id", "TeamName"))" class="form-control team-select-width">
                    <option selected value="">Team</option>
                </select>
                <span asp-validation-for="TeamId"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Confirm</button>
    </div>
</form>

