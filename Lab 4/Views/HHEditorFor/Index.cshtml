@model ComputerModel

@{
    ViewData["Title"] = "Index";
}

<h2>HHEditorFor</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your name" } })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Enter password" } })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IPAddress, "IP Address", new { @class = "control-label" })
        @Html.EditorFor(m => m.IPAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter IP address" } })
        @Html.ValidationMessageFor(m => m.IPAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "control-label" })
        @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter location" } })
        @Html.ValidationMessageFor(m => m.Location)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OS, new { @class = "control-label" })
        @Html.EditorFor(m => m.OS, new { htmlAttributes = new { @class = "form-control",  } })
        @Html.ValidationMessageFor(m => m.OS)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", rows = "5", placeholder = "Enter description" } })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SupportedMonitors, new { @class = "control-label" })
        @Html.EditorFor(m => m.SupportedMonitors, new { htmlAttributes = new { @class = "form-control", type = "number", placeholder = "Enter a number" } })
        @Html.ValidationMessageFor(m => m.SupportedMonitors)
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}