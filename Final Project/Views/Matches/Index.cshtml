
@{
    ViewData["Title"] = "Matches";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Matches</h2>

<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="A-tab" data-toggle="tab" href="#A" role="tab" aria-controls="A" aria-selected="true">Group A</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="B-tab" data-toggle="tab" href="#B" role="tab" aria-controls="B" aria-selected="false">Group B</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="C-tab" data-toggle="tab" href="#C" role="tab" aria-controls="C" aria-selected="false">Group C</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="D-tab" data-toggle="tab" href="#D" role="tab" aria-controls="D" aria-selected="false">Group D</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="E-tab" data-toggle="tab" href="#E" role="tab" aria-controls="E" aria-selected="false">Group E</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="F-tab" data-toggle="tab" href="#F" role="tab" aria-controls="F" aria-selected="false">Group F</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="G-tab" data-toggle="tab" href="#G" role="tab" aria-controls="G" aria-selected="false">Group G</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="H-tab" data-toggle="tab" href="#H" role="tab" aria-controls="H" aria-selected="false">Group H</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="A" role="tabpanel" aria-labelledby="A-tab">
            @for (int i = 0; i < 6; i++)
            {
                <h4>Group stage - Matchday @(i+1)/6</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <partial name="_MatchRounds" />
                    </div>
                    <div class="col-sm-6">
                        <partial name="_MatchRounds" />
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="B" role="tabpanel" aria-labelledby="B-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="C" role="tabpanel" aria-labelledby="C-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="D" role="tabpanel" aria-labelledby="D-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="E" role="tabpanel" aria-labelledby="E-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="F" role="tabpanel" aria-labelledby="F-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="G" role="tabpanel" aria-labelledby="G-tab">
            <partial name="_MatchRounds" />
        </div>
        <div class="tab-pane fade" id="H" role="tabpanel" aria-labelledby="H-tab">
            <partial name="_MatchRounds" />
        </div>
    </div>
</div>
